<section>
        <div class="container  mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-5">
                    <div class="card" style="width: 15rem; height:250px">
                        <img src="{{this.image}}">
                            
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">Rs.{{this.Price}}
                            </p>
                            <p class="card-text">{{this.Description}}
                            </p>
                            
                            <button onclick="addtocart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>


             {{/each}}   
            </div>
        </div>
    </section>
