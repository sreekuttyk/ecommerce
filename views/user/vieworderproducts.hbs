<section>
        <div class="container  mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-5">
                    <div class="card" style="width: 15rem; height:440px">
                        <img src="/productimages/{{this.product._id}}.jpg" style="height: 300px;width:200px">
                            
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center;">{{this.product.Name}}</h5>
                            <p class="card-text" style="text-align: center;">Quantity{{this.quantity}}
                            </p>
                            <p class="card-text" style="text-align: center;">Price{{this.product.Price}}</p>
                            <p class="card-text" style="text-align: center;">{{this.product.Description}}
                            </p>
                            
                           
                        </div>
                    </div>
                </div>


             {{/each}}   
            </div>
        </div>
    </section>
    
    
