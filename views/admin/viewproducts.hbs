<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/addproduct" class="btn btn-success ml-auto ">Add product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width:50px;height:50px"src="/productimages/{{this._id}}.jpg"></td>
          <td>
            <a href="/admin/deleteproduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete{{this.Name}}?')">Delete</a>
            <a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">Edit</a>
            </td>
       </tr>
       {{/each}}
      </tbody>
    </table>
  </div>
</section>